<%= form_for @user, ({controller: 'users', action: 'create', method: 'post'}) do |f| %>
<%= f.label  :name %><br>
<%= f.text_field :name %><br>

<%= f.label  :happiness %><br>
<%= f.text_field :happiness %><br>

<%= f.label  :nausea %><br>
<%= f.text_field :nausea %><br>

<%= f.label  :height %><br>
<%= f.text_field :height %><br>
<%= f.label  :tickets %><br>
<%= f.text_field :tickets %><br>

<%= f.label 'password'%><br>
<%= f.password_field :password %><br>

 <%= f.label :admin, "Check box if you are a theme park owner" %>
<%= f.check_box :admin, class: "form-check-input" %>

<%= f.submit 'Create User' %>
<%end%>



